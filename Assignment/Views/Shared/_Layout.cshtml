<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assignment</title>
    <link href="/css/Account.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand">Assignment</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Dropdown for user profile -->
                    <div class="ms-auto">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i> @Context.Session.GetString("Username")
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li class="logoutBtn">
                                    <i class="fas fa-key mt-1" style="padding:0.5rem;"></i> 
                                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                                        <button type="submit" class="dropdown-item" style="">
                                            Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidenav" class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item border-bottom">
                            <a class="nav-link" asp-controller="Home" asp-action="ExchangeRate" onclick="setActive(this)">
                                <i class="fas fa-dollar-sign"></i>
                                <span>ExchangeRate</span>
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link" asp-controller="Home" asp-action="TransferMoney" onclick="setActive(this)">
                                <i class="fas fa-exchange-alt"></i> 
                                <span>Money Transfer</span>
                            </a>
                        </li>
                        <li class="nav-item border-bottom">
                            <a class="nav-link" asp-controller="Home" asp-action="TransactionReport" onclick="setActive(this)">
                                <i class="fas fa-file-alt"></i> 
                                <span>Report</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-4">
                <div class="container custom-container mt-2">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap Bundle with Popper -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .container{
        padding:0px;
    }
</style>
<script>
    function setActive(element) {
        // Remove active class from all links
        const links = document.querySelectorAll('.nav-link');
        links.forEach(link => link.classList.remove('active'));

        // Add active class to the clicked link
        element.classList.add('active');
    }
</script>